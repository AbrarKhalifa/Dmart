@model Dmart.Models.tbl_admin
@{
    ViewBag.Title = "RegisterAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link href="~/Content/css/register.css" rel="stylesheet" />



</head>
<body>
    <div class="container" style="margin-top:50px">
        <div class="d-flex justify-content-center ">
            <div class="card">
                <div class="card-header">
                    <h3>Register</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>


                @using (Html.BeginForm("RegisterAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="card-body">
                        <div class="input-group form-group  text-white">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="file" class="imgfile" id="imgfile" name="imgfile" placeholder="Image Upload">


                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>

                                @Html.TextBoxFor(x =>x.ad_username, new { @class = "form-control", placeholder = "Username" })

                            </div>



                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                @Html.TextBoxFor(x => x.ad_password, new { @class = "form-control", placeholder = "Password" })

                            </div>

                        </div>
                      
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn float-right login_btn">
                        </div>

                    </div>
                }
                <div class="card-footer p-3">
                    <div class="d-flex justify-content-center links">
                        Already have account? <a href="/Admin/LoginAdmin"> login </a>
                    </div>
                    <div class="d-flex justify-content-center links">
                        <a href="/User/Login"> User ? </a>

                    </div>

                </div>

            </div>
        </div>
    </div>
</body>
</html>
